{% extends "layout.html.twig" %}

{% block title%}{{ event.title }}{% endblock %}

{% block content %}

<main class="container event text-center">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class=" event">
                    <img src="{{ app.request.basepath }}/images/{{ event.image }}"  alt="{{ event.image }} "/>
                    <div class="caption">
                        <h2>{{ event.title }}</h2>
                        <p> {{ event.dateArt|date('d-m-Y') }}</p>
                        <p class="text-justify"> Decription : 
                            {{ event.content}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
</main>

{% endblock %}
