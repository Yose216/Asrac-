{% extends "layout.html.twig" %}

{% block title%}{{ event.title }}{% endblock %}

{% block content %}

<main class="container event text-center">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <div class="thumbnail">
               <h2>{{ event.title }}</h2>
                    <img src="{{ app.request.basepath }}/images/{{ event.image }}"  alt="{{ event.image }}"/>
                </div>
                    <div class="caption">
                        <h3> {{ event.dateEv|date('d-m-Y') }}</h3>
                        <h3>{{ event.lieu }}</h3>
                        <p class="text-justify"> <strong>Description :</strong> 
                            {{ event.desc}}
                        </p>
                    </div>
            </div>
        </div>
</main>

{% endblock %}
