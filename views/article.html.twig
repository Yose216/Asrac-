{% extends "layout.html.twig" %}

{% block title%}{{ article.title }}{% endblock %}

{% block content %}

<main class="container article text-center">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class=" article">
                    <img src="{{ app.request.basepath }}/images/{{ article.image }}"  alt="{{ article.image }} "/>
                    <div class="caption">
                        <h2>{{ article.title }}</h2>
                        <p> {{ article.dateArt|date('d-m-Y') }}</p>
                        <p class="text-justify">
                            {{ article.content}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
</main>

{% endblock %}
